pipeline {
    agent any

    environment {
        // Define variables
        DOCKER_IMAGE = 'kataroja1/fastapi-webhook:latest'
        DOCKER_CREDENTIALS = credentials('dockerhub')
        DOCKER_CREDENTIALS_USR = DOCKER_CREDENTIALS_USR // Update this line
        DOCKER_CREDENTIALS_PSW = DOCKER_CREDENTIALS_PSW // Update this line
    }

    stages {
        stage('Start Jenkins') {
            steps {
                // Checkout your source code from version control
                sh 'echo Start Jenkins............'
                sh "echo docker : user = ${DOCKER_CREDENTIALS_USR} : password = ${DOCKER_CREDENTIALS_PSW}"
            }
        }

        stage('Build Docker Image') {
            steps {
                // Build the Docker image
                dir('./03_Jenkins/week13/03_Github_webhook') {
                    sh 'echo "Running in $(pwd)"'
                    sh "echo start build the Docker image = ${DOCKER_IMAGE}"
                    sh "docker build -t ${DOCKER_IMAGE} ."
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    // Login to Docker Hub
                    withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'DOCKER_CREDENTIALS_USR', passwordVariable: 'DOCKER_CREDENTIALS_PSW')]) {
           
